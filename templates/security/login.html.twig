{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}
    {% block stylesheets %}

        <link href="{{ asset('build/css/main.css') }}" rel="stylesheet" />
        <link href="{{ asset('build/css/Util.css') }}" rel="stylesheet" />



    {% endblock %}
{% block body %}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    {{ form_start(form, {'attr':{'class':'login100-form validate-form flex-sb flex-w'} }) }}

                    <span class="login100-form-title p-b-32">
                        CONNEXION AU COMPTE
					</span>

                    <span class="txt1 p-b-11">
						Email
					</span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">
                        {{ form_widget(form.email, {'attr': {'class': 'input100','placeholder': 'Adresse e-mail ou pseudo','required':'true'}}) }}

                        <span class="focus-input100"></span>
                    </div>
{{ errormail }}
                    <span class="txt1 p-b-11">
						Mot de passe
					</span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">
						<span class="btn-show-pass">
							<i class="fa fa-eye"></i>
						</span>
                        {{ form_widget(form.password, {'attr': {'class': 'input100','placeholder': 'mot de passe','required':'true'}}) }}

                        <span class="focus-input100"></span>
                    </div>
                {{ errorpassword }}

                    <div class="flex-sb-m w-full p-b-48">

                    </div>

                    <div class="container-login100-form-btn">

                        {{ form_widget(form.login, {'attr':{'class':'login100-form-btn'} }) }}

                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

{% endblock %}
